1st solution
class Solution {
    public int findComplement(int num) {
     char arr[]= Integer.toBinaryString(num).toCharArray();
     for(int i=0;i<arr.length;i++)
     {
         if(arr[i]=='0') arr[i]='1';
         else arr[i]='0';
     }
        String ans=new String(arr);
        int decimal=Integer.parseInt(ans,2);
        return decimal;
    }
}

